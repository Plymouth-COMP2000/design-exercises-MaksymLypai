<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AccountActivity">

    <!-- Scrollable content above the bottom nav -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="#1C1F4C"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp" />

            <!-- Profile Icon -->
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_account_circle"
                android:tint="#1C1F4C"
                android:layout_marginBottom="12dp" />

            <!-- Name -->
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Smith"
                android:textColor="#1C1F4C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Email -->
            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="johnsmith@email.com"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="28dp" />

            <!-- Section Title -->
            <TextView
                android:id="@+id/notificationsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications settings:"
                android:textColor="#1C1F4C"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Row: Reservation Updates -->
            <LinearLayout
                android:id="@+id/rowReservationUpdates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/labelReservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reservation Updates"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descReservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get notified when your table is confirmed or changed."
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchReservationUpdates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:showText="false"
                    android:thumbTint="#1C1F4C"
                    android:trackTint="#D6D6D6" />
            </LinearLayout>

            <!-- Row: Offers -->
            <LinearLayout
                android:id="@+id/rowOffers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/labelOffers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Special Offers and Promotions"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descOffers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receive exclusive discounts and seasonal offers."
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchOffers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:showText="false"
                    android:thumbTint="#1C1F4C"
                    android:trackTint="#D6D6D6" />
            </LinearLayout>

            <!-- Row: Menu Updates -->
            <LinearLayout
                android:id="@+id/rowMenuUpdates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/labelMenuUpdates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menu Updates"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descMenuUpdates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stay informed about new dishes and daily specials."
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchMenuUpdates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:showText="false"
                    android:thumbTint="#1C1F4C"
                    android:trackTint="#D6D6D6" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation fixed to bottom -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        app:selectedItemId="@id/navigation_account" />
</RelativeLayout>
